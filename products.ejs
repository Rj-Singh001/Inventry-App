<h3 class="mt-5 mb-4 header"></h3>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(product => { %>
            <tr>
                <th scope="row"><%= product.id %></th>
                <td><%= product.name %></td>
                <td><%= product.desc %></td>
                <td>$<%= product.price %></td>
                <td> <a class="btn btn-warning" href="/update-products/<%= product.id %>">Update Products</a></td>
                <td><a class="btn btn-warning" href="/delete-product/<%= product.id %>">Delete</a></td>
            </tr>
        <% }) %>
    </tbody>
</table>